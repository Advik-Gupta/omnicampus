FROM golang:1.24-alpine

# Required for go install
RUN apk add --no-cache git

WORKDIR /app

# Dependencies first (better cache)
COPY go.mod go.sum ./
RUN go mod download

# Install Air (Go 1.24 compatible)
RUN go install github.com/air-verse/air@v1.52.3

# Copy source
COPY . .

EXPOSE 8080

# Run Air
CMD ["air"]
